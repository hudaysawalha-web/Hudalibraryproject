@model List<Category>

 @section Title{categories} 
@section SubTitle {Show}
@section Buttons {
<a asp-controller="Categories" asp-action="Create" class="btn btn-primary">Create</a>}

            @if (!Model.Any())
            {
                <div class="card-body">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                   NO DATA FOUND
                        </div>
                </div>
            }

            else
            {
                 <div class="card-body">
                <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th>Action</th>
                   
                </tr>
            </thead>
            <tbody>
 
                 @foreach (var item in @Model)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                        <td><a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id"
                        >Edit</a>
                        
                            <a asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
             } 
             </tbody>
             </table>
             </div>
            }
           
      